<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/text_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_student_absence"
            app:layout_constraintRight_toLeftOf="@id/text_student_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Ahmad Fauzi Wibowo"
            android:textSize="16sp"
            android:fontFamily="@font/circular_book"
            android:textColor="@color/black"
    />


    <TextView
            android:id="@+id/text_student_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/text_student_name"
            app:layout_constraintBottom_toBottomOf="@id/text_student_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            tools:text="-"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/circular_medium"
            android:textColor="@color/mediumGray"
    />

    <TextView
            android:id="@+id/text_student_absence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            tools:text="M"
            android:gravity="center"
            android:background="@drawable/circle"
            android:textSize="18sp"
            android:fontFamily="@font/circular_medium"
            android:textColor="@color/colorAccent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>