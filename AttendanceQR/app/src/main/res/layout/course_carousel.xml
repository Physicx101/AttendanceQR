<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <com.example.bogi.attendanceqr.presentation.home.course.CourseRecycler
            android:id="@+id/course_recycler"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingEnd="10dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/indicator_course"
    />

    <com.example.bogi.attendanceqr.presentation.home.course.CourseIndicator
            android:id="@+id/indicator_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingTop="14dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/course_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>